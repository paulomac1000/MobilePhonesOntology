@model MobilePhonesOntology.ViewModels.FindViewModel

@{
    ViewBag.Title = "Find phone";
}

<div class="container">
    <div class="panel panel-primary row col-md-offset-3 col-md-6">

        <div class="row panel-heading">
            @ViewBag.Title
        </div>

        <div class="panel-body">
            <div class="row" style="margin-left: 50px;">
                @using (Html.BeginForm("Index", "Find", FormMethod.Post))
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Brand, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1 col-md-10" style="margin-top: 15px;">
                        <input type="submit" value="Submit" class="btn btn-success btn-block" />
                    </div>
                }
            </div>

            @if (Model != null && Model.Succes)
            {
                <div class="alert alert-info">
                    Found <strong>@Model.Phones.Count()</strong> results.
                </div>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Brand</th>
                            <th>Model</th>
                            <th>Link</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var phone in Model.Phones)
                        {
                            <tr>
                                <td>@phone.Brand</td>
                                <td>@phone.Model</td>
                                <td><a href="@phone.Uri" class="btn btn-primary btn-block">Link</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>