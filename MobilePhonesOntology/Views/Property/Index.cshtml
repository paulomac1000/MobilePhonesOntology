@model MobilePhonesOntology.ViewModels.PropertyViewModel

@{
    ViewBag.Title = $"Property {Model.PropertyName}";
}

<div class="container">
    <div class="panel panel-primary row col-md-offset-3 col-md-6">

        <div class="row panel-heading">
            @ViewBag.Title
        </div>

        <div class="panel-body">
            @if (Model.Succes)
            {
                <div class="alert alert-success">
                    @Html.Raw(Model.ResponseMessage)
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <strong>Error</strong> @Html.Raw(Model.ErrorMessage)
                </div>
            }

            <button class="btn btn-primary btn-block" onclick="window.history.back();">Go Back</button>
        </div>
    </div>
</div>